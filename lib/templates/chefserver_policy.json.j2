{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject"
      ],
      "Resource": [
        "arn:aws:s3:::cloudstrap.{{ cloud }}.{{ region }}.{{ env }}.leafme/chef-server-bootstrap.tar.gz"
      ]
    },
    {
      "Sid": "",
      "Action": [
        "s3:AbortMultipartUpload",
        "s3:DeleteObject",
        "s3:GetBucketAcl",
        "s3:GetBucketPolicy",
        "s3:GetObject",
        "s3:GetObjectAcl",
        "s3:ListBucket",
        "s3:ListBucketMultipartUploads",
        "s3:ListMultipartUploadParts",
        "s3:PutObject",
        "s3:PutObjectAcl"
      ],
      "Effect": "Allow",
      "Resource": [
        "arn:aws:s3:::cloudstrap.{{ cloud }}.{{ region }}.{{ env }}.leafme/validator.pem",
        "arn:aws:s3:::cloudstrap.{{ cloud }}.{{ region }}.{{ env }}.leafme/babysitter-knife.pem"
      ]
    }
  ]
}
